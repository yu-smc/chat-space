.message{"data-message-id": "#{message.id}"}
  .message-info
    %p.message-info__user
      = message.user.name
    %p.message-info__date
      = message.created_at
  .message-text
    - if message.body.present?
      %p
        = message.body
    = image_tag message.image.url, class: 'message-image' if message.image.present?


