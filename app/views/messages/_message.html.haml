.message
  .message-info
    %p.message-info__user
      = message.user.name
    %p.message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.body.present?
      %p
        = message.body
    = image_tag message.image.url, class: 'message-image' if message.image.present?


